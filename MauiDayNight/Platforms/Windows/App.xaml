<maui:MauiWinUIApplication
    x:Class="MauiDayNight.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MauiDayNight.WinUI"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:telerik="using:Telerik.Maui"
    xmlns:telerikInputElement="using:Telerik.Maui.InputElement"
    xmlns:telerikPlatform="using:Telerik.Maui.Platform"
    xmlns:theming="using:Telerik.UI.Xaml.Controls">
    <maui:MauiWinUIApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <theming:UserThemeResources x:Key="ResourceLoaderInitializer" />
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="ms-appx:///Telerik.WinUI.Controls/Input/Themes/ThemeResourcesDark.xaml" />
                        <ResourceDictionary Source="{CustomResource DarkResourcesPath}" />
                        <ResourceDictionary Source="ms-appx:///Telerik.WinUI.Controls/Input/Themes/Resources.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <theming:UserThemeResources x:Key="ResourceLoaderInitializer" />
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="ms-appx:///Telerik.WinUI.Controls/Input/Themes/ThemeResourcesLight.xaml" />
                        <ResourceDictionary Source="{CustomResource LightResourcesPath}" />
                        <ResourceDictionary Source="ms-appx:///Telerik.WinUI.Controls/Input/Themes/Resources.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Style x:Key="MaskedEntryControlClearButtonStyle" TargetType="telerikPlatform:RadInlineButton">
                <Setter Property="Foreground" Value="{ThemeResource TelerikMaskedInput_Foreground}" />
                <Setter Property="FontFamily" Value="{ThemeResource SymbolThemeFontFamily}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Content" Value="&#xE894;" />
                <Setter Property="PointerOverForegroundBrush" Value="{ThemeResource TelerikMaskedInput_ClearButtonForegroundPointerOver}" />
                <Setter Property="PointerOverBackgroundBrush" Value="{ThemeResource TelerikMaskedInput_ClearButtonBackgroundPointerOver}" />
                <Setter Property="PressedForegroundBrush" Value="{ThemeResource TelerikMaskedInput_ClearButtonForegroundPressed}" />
                <Setter Property="PressedBackgroundBrush" Value="{ThemeResource TelerikMaskedInput_ClearButtonBackgroundPressed}" />
            </Style>

            <Style
                x:Key="MaskedEntryControlTextBoxStyle"
                BasedOn="{StaticResource DefaultTextBoxStyle}"
                TargetType="TextBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid ColumnDefinitions="*, Auto">
                                <Border
                                    x:Name="BorderElement"
                                    Grid.ColumnSpan="2"
                                    MinWidth="{TemplateBinding MinWidth}"
                                    MinHeight="{TemplateBinding MinHeight}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Control.IsTemplateFocusTarget="True"
                                    CornerRadius="{TemplateBinding CornerRadius}" />
                                <ScrollViewer
                                    x:Name="ContentElement"
                                    Margin="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    AutomationProperties.AccessibilityView="Raw"
                                    Foreground="{TemplateBinding Foreground}"
                                    HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                    HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
                                    IsDeferredScrollingEnabled="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}"
                                    IsHorizontalRailEnabled="{TemplateBinding ScrollViewer.IsHorizontalRailEnabled}"
                                    IsTabStop="False"
                                    IsVerticalRailEnabled="{TemplateBinding ScrollViewer.IsVerticalRailEnabled}"
                                    VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
                                    VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
                                    ZoomMode="Disabled" />
                                <TextBlock
                                    x:Name="PlaceholderTextContentPresenter"
                                    Grid.ColumnSpan="2"
                                    Margin="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    Foreground="{Binding PlaceholderForeground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TextControlPlaceholderForeground}}"
                                    IsHitTestVisible="False"
                                    Text="{TemplateBinding PlaceholderText}"
                                    TextAlignment="{TemplateBinding TextAlignment}"
                                    TextWrapping="{TemplateBinding TextWrapping}" />
                                <telerikPlatform:RadInlineButton
                                    x:Name="DeleteButton"
                                    Grid.Column="1"
                                    Margin="5"
                                    VerticalAlignment="Stretch"
                                    AutomationProperties.AutomationId="RadEntryClearButton"
                                    Foreground="{Binding ClearButtonForeground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TelerikMaskedInput_Foreground}}"
                                    IsTabStop="False"
                                    PointerOverForegroundBrush="{Binding PointerOverClearButtonForeground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TelerikMaskedInput_ClearButtonForegroundPointerOver}}"
                                    PressedForegroundBrush="{Binding PressedClearButtonForeground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TelerikMaskedInput_ClearButtonForegroundPressed}}"
                                    Style="{StaticResource MaskedEntryControlClearButtonStyle}"
                                    Visibility="Collapsed" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="Disabled">
                                            <VisualState.Setters>
                                                <!--  Disable all setters:  -->
                                                <!--<Setter Target="ContentElement.Foreground" Value="{ThemeResource TextControlForegroundDisabled}" />-->
                                                <!--<Setter Target="PlaceholderTextContentPresenter.Foreground" Value="{ThemeResource TextControlForegroundDisabled}" />-->
                                                <!--<Setter Target="BorderElement.Background" Value="{ThemeResource TelerikMaskedInput_BackgroundDisabled}" />-->
                                                <!--<Setter Target="BorderElement.BorderBrush" Value="{ThemeResource TelerikMaskedInput_BorderBrushDisabled}" />-->
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <!--  Disable all setters:  -->
                                                <!--<Setter Target="PlaceholderTextContentPresenter.Foreground" Value="{Binding PlaceholderForeground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TextControlPlaceholderForegroundPointerOver}}" />-->
                                                <!--<Setter Target="BorderElement.Background" Value="Transparent" />-->
                                                <!--<Setter Target="BorderElement.Background" Value="{ThemeResource TelerikMaskedInput_BackgroundPointerOver}"/>-->
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Focused">
                                            <VisualState.Setters>
                                                <!--  Disable all setters:  -->
                                                <!--<Setter Target="PlaceholderTextContentPresenter.Foreground" Value="{Binding PlaceholderForeground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TextControlPlaceholderForegroundFocused}}" />-->
                                                <!--<Setter Target="BorderElement.Background" Value="Red" />-->
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                    <VisualStateGroup x:Name="ClearButtonStates">
                                        <VisualState x:Name="ClearButtonVisible">
                                            <VisualState.Setters>
                                                <Setter Target="DeleteButton.Visibility" Value="Visible" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="ClearButtonCollapsed" />
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="telerikPlatform:RadMauiEntry">
                <Style.Setters>
                    <Setter Property="Foreground" Value="{ThemeResource TelerikMaskedInput_Foreground}" />
                    <Setter Property="Background" Value="{ThemeResource TelerikMaskedInput_Background}" />
                    <Setter Property="EntryBackground" Value="{ThemeResource TelerikMaskedInput_Background}" />
                    <Setter Property="BorderBrush" Value="{ThemeResource TelerikMaskedInput_BorderBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="CornerRadius" Value="{ThemeResource TelerikControlCornerRadius}" />
                    <Setter Property="EntryCornerRadius" Value="{ThemeResource TelerikControlCornerRadius}" />
                    <Setter Property="IsTabStop" Value="False" />
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="VerticalAlignment" Value="Stretch" />
                    <Setter Property="FocusedBorderBrush" Value="{ThemeResource TelerikMaskedInput_BorderBrushFocused}" />
                    <Setter Property="FocusedBorderThickness" Value="{ThemeResource TextControlBorderThemeThicknessFocused}" />
                    <Setter Property="Padding" Value="10,5,6,6" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="telerikPlatform:RadMauiEntry">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,*,Auto">
                                    <telerikInputElement:RadTextBox
                                        x:Name="PART_Editor"
                                        Grid.Row="1"
                                        Padding="{TemplateBinding Padding}"
                                        AutomationProperties.AutomationId="RadEntryEditor"
                                        Background="{TemplateBinding EntryBackground}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        ClearButtonForeground="{TemplateBinding ClearButtonForeground}"
                                        ClearButtonVisibility="{TemplateBinding ClearButtonVisibility}"
                                        CornerRadius="{TemplateBinding EntryCornerRadius}"
                                        FontFamily="{TemplateBinding FontFamily}"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{Binding Foreground, RelativeSource={RelativeSource TemplatedParent}, TargetNullValue={ThemeResource TelerikMaskedInput_Foreground}}"
                                        IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                        IsSpellCheckEnabled="False"
                                        IsTextPredictionEnabled="False"
                                        PlaceholderText="{TemplateBinding Placeholder}"
                                        PointerOverClearButtonForeground="{TemplateBinding PointerOverClearButtonForeground}"
                                        PressedClearButtonForeground="{TemplateBinding PressedClearButtonForeground}"
                                        Style="{StaticResource MaskedEntryControlTextBoxStyle}" />
                                    <Border
                                        x:Name="FocusVisual"
                                        Grid.Row="1"
                                        BorderBrush="{TemplateBinding FocusedBorderBrush}"
                                        BorderThickness="{TemplateBinding FocusedBorderThickness}"
                                        CornerRadius="{TemplateBinding EntryCornerRadius}"
                                        Opacity="0" />
                                    <Border
                                        x:Name="InvalidVisual"
                                        Grid.Row="1"
                                        BorderBrush="{ThemeResource TelerikMaskedInput_BorderBrushInvalid}"
                                        BorderThickness="{ThemeResource TextControlBorderThemeThicknessFocused}"
                                        CornerRadius="{TemplateBinding EntryCornerRadius}"
                                        Opacity="0" />
                                    <FontIcon
                                        x:Name="PART_ErrorIndicator"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        telerik:TelerikFont.UsePlatformFont="True"
                                        AutomationProperties.AutomationId="RadErrorIndicator"
                                        AutomationProperties.Name="errorIndicator"
                                        FontSize="16"
                                        Foreground="{ThemeResource TelerikMaskedInput_ValidationBrush}"
                                        Glyph="&#xe863;"
                                        ToolTipService.ToolTip="{TemplateBinding ValidationErrorMessage}"
                                        Visibility="Collapsed" />
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="PointerOver" />
                                            <VisualState x:Name="Focused">
                                                <VisualState.Setters>
                                                    <Setter Target="FocusVisual.Opacity" Value="1" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Invalid">
                                                <VisualState.Setters>
                                                    <Setter Target="InvalidVisual.Opacity" Value="1" />
                                                    <Setter Target="PART_ErrorIndicator.Visibility" Value="Visible" />
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Disabled" />
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
